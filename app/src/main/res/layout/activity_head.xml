<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/top_bg">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/title"
        android:id="@+id/top_title"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@mipmap/weather"
        android:id="@+id/top_view_weather"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/top_view_weather"
        android:id="@+id/weather_layout"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/top_view_text"
            android:text="多云转晴"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/top_view_text"
            android:text="29℃"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/weather_layout"
        android:id="@+id/car_layout"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/top_view_text"
            android:text="当前绑定车辆："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/top_view_text"
            android:text="浙X6320"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/car_layout"
        android:layout_centerVertical="true"
        android:background="@mipmap/fzzc_bg"
        android:layout_marginStart="5dp"
        style="@style/top_view_text"
        android:id="@+id/top_view_zzzc"
        android:text="辅助支撑"/>
    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/car_layout"
        android:background="@mipmap/fzzc_bg"
        android:layout_marginStart="5dp"
        style="@style/top_view_text"
        android:layout_centerVertical="true"
        android:id="@+id/top_view_sjcj"
        android:text="数据采集"/>-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/top_view_setting"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/setting"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_view_notice"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/top_view_setting"
        android:src="@mipmap/notice"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/top_view_notice"
        android:layout_centerVertical="true"
        android:id="@+id/top_view_username"
        style="@style/top_view_text"
        android:text="浙江总队"
        android:drawableEnd="@mipmap/arrow"
        android:drawableStart="@mipmap/zjzd_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        style="@style/top_view_text"
        android:layout_toStartOf="@id/top_view_username"
        android:text="2022年08月10日 12:18:00"/>


</RelativeLayout>